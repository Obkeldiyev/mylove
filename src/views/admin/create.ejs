<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Profile</title>
    <link rel="stylesheet" href="/styles/admin.create.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <a href="/" class="nav-heart">❤️</a>
        <ul class="nav-links">
            <li><a href="/notes">Notes</a></li>
            <li><a href="/profile">Profile</a></li>
            <li><a href="/wishes">Wishes</a></li>
            <li><a href="/diary"></a></li>
            <li><a href="/chat">Chat</a></li>
        </ul>
    </nav>

    <div class="flash-container">
        <% if (successMessage && successMessage.length > 0) { %>
            <div class="flash flash-success">
                <%= successMessage %>
                <span class="flash-close">×</span>
            </div>
        <% } %>
        <% if (errorMessage && errorMessage.length > 0) { %>
            <div class="flash flash-error">
                <%= errorMessage %>
                <span class="flash-close">×</span>
            </div>
        <% } %>
    </div>

    <!-- Update Form -->
    <h1>Create Admin</h1>
    <form action="/create" method="post" enctype="multipart/form-data">
        <input type="text" name="first_name" placeholder="First name" required>
        <input type="text" name="second_name" placeholder="Second name" required>
        <input type="text" name="username" placeholder="Username" required>
        <input type="password" name="password" placeholder="Password">
        <input type="number" name="birth_year" placeholder="Birth year" required>
        <input type="text" name="birth_month" placeholder="Birth month" required>
        <input type="number" name="birth_day" placeholder="Birth day" required>
        <textarea name="about" placeholder="Tell us about yourself"></textarea>
        <input type="file" name="photo" accept="image/*">
        <button type="submit">Create</button>
    </form>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
    const closeButtons = document.querySelectorAll('.flash-close');

    closeButtons.forEach(button => {
        button.addEventListener('click', () => {
            const flash = button.parentElement;
            flash.style.transition = 'opacity 0.3s ease';
            flash.style.opacity = '0';
            setTimeout(() => {
                flash.remove();
            }, 300);
        });
    });

    // Auto-dismiss after 5 seconds
    const flashes = document.querySelectorAll('.flash');
    flashes.forEach(flash => {
        setTimeout(() => {
            flash.style.transition = 'opacity 0.3s ease';
            flash.style.opacity = '0';
            setTimeout(() => {
                flash.remove();
            }, 300);
        }, 5000);
    });
});
    </script>
</body>
</html>