<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Profile</title>
    <link rel="stylesheet" href="/styles/admin.profile.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <a href="/" class="nav-heart">❤️</a>
        <ul class="nav-links">
            <li><a href="/notes">Notes</a></li>
            <li><a href="/profile">Profile</a></li>
            <li><a href="/wishes">Wishes</a></li>
        </ul>
    </nav>
    <div class="flash-container">
        <% if (successMessage && successMessage.length > 0) { %>
            <div class="flash flash-success">
                <%= successMessage %>
                <span class="flash-close">×</span>
            </div>
        <% } %>
        <% if (errorMessage && errorMessage.length > 0) { %>
            <div class="flash flash-error">
                <%= errorMessage %>
                <span class="flash-close">×</span>
            </div>
        <% } %>
    </div>

    <!-- Profile Content -->
    <h1>Your Profile</h1>

    <div class="container">
        <img src="../../Uploads/<%= checkAdmin.profile_photo %>" alt="Profile Photo">

        <div class="name">
            <h1 class="bigger"><%= checkAdmin.first_name %></h1>
            <h1><%= checkAdmin.surname %></h1>
        </div>

        <div class="birth">
            <h1 class="birth"><%= checkAdmin.birth_year %>, <%= checkAdmin.birth_month %> <%= checkAdmin.birth_day %></h1>
        </div>

        <div class="content">
            <p><%= checkAdmin.about %></p>
        </div>

        <div class="actions">
            <a href="/update">Edit profile</a>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
    const closeButtons = document.querySelectorAll('.flash-close');

    closeButtons.forEach(button => {
        button.addEventListener('click', () => {
            const flash = button.parentElement;
            flash.style.transition = 'opacity 0.3s ease';
            flash.style.opacity = '0';
            setTimeout(() => {
                flash.remove();
            }, 300);
        });
    });

    // Auto-dismiss after 5 seconds
    const flashes = document.querySelectorAll('.flash');
    flashes.forEach(flash => {
        setTimeout(() => {
            flash.style.transition = 'opacity 0.3s ease';
            flash.style.opacity = '0';
            setTimeout(() => {
                flash.remove();
            }, 300);
        }, 5000);
    });
});
    </script>
</body>
</html>