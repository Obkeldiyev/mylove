<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create a Wish</title>
    <link rel="stylesheet" href="/styles/wishes.create.css" />
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar">
      <a href="/" class="nav-heart">❤️</a>
      <div class="nav-links">
        <a href="/notes" class="nav-button">Notes</a>
        <a href="/profile" class="nav-button">Profile</a>
        <a href="/wishes" class="nav-button">Wishes</a>
        <a href="/diary" class="nav-button">Diary</a>
        <a href="/chat" class="nav-button">Chat</a>
      </div>
    </nav>

    <div class="flash-container">
      <% if (successMessage && successMessage.length > 0) { %>
          <div class="flash flash-success">
              <%= successMessage %>
              <span class="flash-close">×</span>
          </div>
      <% } %>
      <% if (errorMessage && errorMessage.length > 0) { %>
          <div class="flash flash-error">
              <%= errorMessage %>
              <span class="flash-close">×</span>
          </div>
      <% } %>
  </div>

    <!-- Form Header -->
    <header class="form-header">
      <h1>Create a Wish</h1>
    </header>

    <!-- Form Container -->
    <div class="form-container">
      <form action="/wishes/create" method="POST">
        <input type="text" name="title" placeholder="Wish Title" required />
        <textarea
          name="description"
          placeholder="Wish Description"
          required
        ></textarea>
        <button type="submit">Create Wish</button>
      </form>
    </div>

    <script>
      document.addEventListener('DOMContentLoaded', () => {
    const closeButtons = document.querySelectorAll('.flash-close');

    closeButtons.forEach(button => {
        button.addEventListener('click', () => {
            const flash = button.parentElement;
            flash.style.transition = 'opacity 0.3s ease';
            flash.style.opacity = '0';
            setTimeout(() => {
                flash.remove();
            }, 300);
        });
    });

    // Auto-dismiss after 5 seconds
    const flashes = document.querySelectorAll('.flash');
    flashes.forEach(flash => {
        setTimeout(() => {
            flash.style.transition = 'opacity 0.3s ease';
            flash.style.opacity = '0';
            setTimeout(() => {
                flash.remove();
            }, 300);
        }, 5000);
    });
});
    </script>
  </body>
</html>